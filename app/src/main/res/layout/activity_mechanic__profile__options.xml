<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:layout_weight="1"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:background="#EB6841"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/shop_view_demo"
            android:clickable="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="39dp"
                android:padding="10dp"
                android:text="National Garage"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:text="Car repairment services in Goa"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/profile_name"
                app:layout_constraintTop_toBottomOf="@+id/profile_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
    <LinearLayout
        android:clickable="true"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/user_account_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dp"
                android:textSize="25dp"
                android:text="National Garage" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_emails"
                android:text="4.3"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:theme="@style/RatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:fitsSystemWindows="true"
                android:rating="4.3"
                android:stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/profile_emails"
                android:layout_marginLeft="10dp"
                android:text="(190 votes)"
                android:textSize="18dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="19dp"
                android:text="Car repair and maintenance"
            />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location_of_mech" />

            <TextView
                android:id="@+id/user_addresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="map_from_here"
                android:paddingLeft="20dp"
                android:text="8_3_anjuna_mapusa_rd_khorlim_mapusa_goa_403507" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/number_of_mech" />

            <TextView
                android:id="@+id/mechanic_phone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:clickable="true"
                android:onClick="call_from_here"
                android:text="+919232452355" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/set_appointment" />

            <TextView
                android:id="@+id/set_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="appoint_from_here"
                android:paddingLeft="20dp"
                android:text="Set an appintment" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/account_logut_btn"
            android:layout_width="206dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#EB6841"
            android:text="Chat"

            android:textColor="#fff" />

        <Button
            android:id="@+id/account_update_btn"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="1dp"
            android:background="#EB6841"
            android:onClick="call_from_here"
            android:text="Call"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>